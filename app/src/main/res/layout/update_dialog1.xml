<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <EditText
        android:id="@+id/update_dialog_name1"
        android:layout_width="378dp"
        android:layout_height="44dp"
        android:background="#F4C5FC"
        android:hint="Enter Name" />

    <EditText
        android:id="@+id/update_dialog_bid1"
        android:layout_width="382dp"
        android:layout_height="52dp"
        android:background="#F0BDF8"
        android:inputType="phone"
        android:hint="Enter ID" />

    <EditText
        android:id="@+id/update_dialog_class1"
        android:layout_width="380dp"
        android:layout_height="58dp"
        android:background="#EAB9F3"
        android:hint="Enter Subject" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonUpdateArtist1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#CF40E9"
            android:text="Update" />

        <Button
            android:id="@+id/buttonDeleteArtist1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FD8A82"
            android:text="Delete" />

    </LinearLayout>


</LinearLayout>